<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    android:scrollbars="none"
    android:orientation="vertical"
    tools:context=".course_detail">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:titleTextColor="@color/white"
        
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <LinearLayout
            android:id="@+id/about_cpp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ccc"
            >
            <LinearLayout
                android:id="@+id/top_details"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/course_img"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/ml"
                    android:layout_margin="10dp"
                    android:elevation="16dp"
                    android:scaleType="centerInside"
                    />

            </LinearLayout>

                <Button
                    android:id="@+id/register_buttonId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="register now"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="#4682F2"
                    android:layout_gravity="center"
                    android:textSize="25dp"
                    />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/courseDetailsTextView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:elevation="16dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="4"
                    android:textSize="@dimen/text_size"
                    android:text="@string/about_course_cpp"
                    />

                <Button
                    android:id="@+id/ShowmoreButton1"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:text="Show more..."
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_blue_light"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:elevation="16dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/courseDetailsTextView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="4"
                    android:text="@string/about_course_cpp"
                    />

                <Button
                    android:id="@+id/ShowmoreButton2"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:text="Show more..."
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_blue_light"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:elevation="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/courseDetailsTextView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="4"
                    android:text="@string/about_course_cpp"
                    />

                <Button
                    android:id="@+id/ShowmoreButton4"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:text="Show more..."
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_blue_light"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:elevation="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/courseDetailsTextView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="4"
                    android:text="@string/about_course_cpp"
                    android:textSize="@dimen/text_size" />

                <Button
                    android:id="@+id/ShowmoreButton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:background="@android:color/transparent"
                    android:text="Show more..."
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_blue_light" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:elevation="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/courseDetailsTextView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="4"
                    android:text="@string/about_course_cpp"
                    />

                <Button
                    android:id="@+id/ShowmoreButton5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:layout_marginStart="5dp"
                    android:text="Showmore..."
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_blue_light"
                    android:background="@android:color/transparent"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/fullSyllabusButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="View Full Syllabus"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="#4682F2"
                    android:layout_gravity="center"


                    android:textSize="20dp"
                    />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>