    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:id="@+id/about_cpp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            >
            <LinearLayout
                android:id="@+id/top_details"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                >


                <ImageView
                    android:id="@+id/course_img"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/placement_banner"

                    android:layout_margin="0dp"
                    android:elevation="16dp"
                    android:scaleType="fitXY"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/place1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="REGISTER"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="#4682F2"
                android:layout_gravity="center"
                android:textSize="20dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/courseDetailsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:elevation="16dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="inherit"
                    android:text="@string/about_placement"
                    android:textSize="18sp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/place2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="PLACEMENT UPDATES"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="#4682F2"
                    android:layout_gravity="center"


                    android:textSize="20dp"
                    />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
